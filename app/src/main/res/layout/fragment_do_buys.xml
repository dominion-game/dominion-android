<?xml version="1.0" encoding="utf-8"?>

<layout
  xmlns:android="http://schemas.android.com/apk/res/android">

  <data>
    <variable
      name="viewModel"
      type="edu.cnm.deepdive.dominionandroid.viewmodel.GameViewModel"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#615757">

    <TextView
      android:id="@+id/actions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:freezesText="true"
      android:text="@{Integer.toString(viewModel.myActionsRemaining)}"
      android:textColor="#FFFFFF"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@id/view_pager"
      app:layout_constraintEnd_toStartOf="@+id/buys"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"/>

    <TextView
      android:id="@+id/buys"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:freezesText="true"
      android:textColor="#FFFFFF"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@id/view_pager"
      app:layout_constraintEnd_toStartOf="@+id/gold"
      app:layout_constraintStart_toEndOf="@id/actions"
      app:layout_constraintTop_toTopOf="parent"
      android:text= "@{Integer.toString(viewModel.myBuysRemaining)}"/>

    <TextView
      android:id="@+id/gold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:freezesText="true"
      android:text="@{Integer.toString(viewModel.myBuyingPower)}"
      android:textColor="#FFFFFF"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@id/view_pager"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/buys"
      app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager.widget.ViewPager
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/view_pager"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/end_turn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/buys"
      tools:context=".controller.DoActionFragment"
      android:padding="16dp"/>

    <Button
      android:id="@+id/buy_card"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:background="@drawable/blue_button"
      android:fontFamily="monospace"
      android:shadowColor="#A8A8A8"
      android:shadowDx="0"
      android:shadowDy="0"
      android:shadowRadius="5"
      android:text="Buy Card"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/end_turn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/num_cards_in_stack"/>

    <Button
      android:id="@+id/end_turn"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:background="@drawable/blue_button"
      android:fontFamily="monospace"
      android:shadowColor="#A8A8A8"
      android:shadowDx="0"
      android:shadowDy="0"
      android:shadowRadius="5"
      android:text="End Turn"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/buy_card"
      app:layout_constraintTop_toBottomOf="@+id/num_cards_in_stack"/>

    <TextView
      android:id="@+id/num_cards_in_stack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="# in stack"
      android:textSize="24sp"
      android:textAlignment="center"
      android:textColor="#DA0808"
      app:layout_constraintTop_toBottomOf="@id/view_pager"
      app:layout_constraintBottom_toTopOf="@id/end_turn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>



  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>