<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#615757"
    tools:context=".controller.ActionFragment">

    <!-- TODO: Add in Action/Buy/Money counters -->

    <Button
        android:id="@+id/hand"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/buttonshape"
        android:fontFamily="monospace"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="View Hand"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/end_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/end_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:fontFamily="monospace"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="End Action"
        app:layout_constraintBottom_toTopOf="@id/end_turn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hand" />

    <Button
        android:id="@+id/end_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:fontFamily="monospace"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="End Turn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_action" />

    <TextView
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actions"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:freezesText="true"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buys"/>

    <TextView
        android:id="@+id/buys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buys"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:freezesText="true"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hand"
        app:layout_constraintStart_toEndOf="@id/actions"
        app:layout_constraintEnd_toStartOf="@+id/gold" />

    <TextView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:freezesText="true"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hand"
        app:layout_constraintStart_toEndOf="@id/buys"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>